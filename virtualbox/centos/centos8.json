{
    "variables": {
        "iso": "http://ftp.unicamp.br/pub/centos/8/isos/x86_64/CentOS-8.1.1911-x86_64-boot.iso",
        "checksum": "7fea13202bf2f26989df4175aace8fdc16e1137f7961c33512cbfad844008948",
        "checksum_type": "sha256",
        "headless": "false",
        "cpus": "2",
        "memory": "1024",
        "disk_size": "20000",
        "hard_drive_interface": "sata",
        "hostname": "centos",
        "domain": "localhost",
        "ssh_user": "root",
        "ssh_pass": "123456"
    },

    "builders": [{
        "type": "virtualbox-iso",
        "guest_os_type": "RedHat_64",
        "iso_url": "{{user `iso`}}",
        "iso_checksum": "{{user `checksum`}}",
        "iso_checksum_type": "{{user `checksum_type`}}",
        "output_directory": "builds",
        "vm_name": "centos8-x86_64-packer",
        "headless": "{{user `headless`}}",
        "disk_size": "{{user `disk_size`}}",
        "hard_drive_discard": "true",
        "hard_drive_nonrotational": "true",
        "hard_drive_interface": "{{user `hard_drive_interface`}}",
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
            ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
            ["modifyvm", "{{.Name}}", "--audio", "none"],
            ["modifyvm", "{{.Name}}", "--nic1", "nat", "--nictype1", "virtio"]
        ],
        "http_directory": "http",
        "ssh_username": "{{user `ssh_user`}}",
        "ssh_password": "{{user `ssh_pass`}}",
        "ssh_timeout": "20m",
        "ssh_pty": true,
        "shutdown_command": "sudo systemctl poweroff",
        "boot_wait": "5s",
        "boot_command": [
            "<esc>",
            "<wait>",
            "linux inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos8-ks.cfg biosdevname=0 net.ifnames=0",
            "<enter>"
        ]
    }]

}
