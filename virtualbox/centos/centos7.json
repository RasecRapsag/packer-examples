{
    "variables": {
        "iso": "http://ftp.unicamp.br/pub/centos/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1908.iso",
        "checksum": "6ffa7ad44e8716e4cd6a5c3a85ba5675a935fc0448c260f43b12311356ba85ad",
        "checksum_type": "sha256",
        "headless": "false",
        "cpus": "2",
        "memory": "1024",
        "disk_size": "20000",
        "hard_drive_interface": "sata",
        "hostname": "centos",
        "domain": "localhost",
        "ssh_user": "root",
        "ssh_pass": "123456"
    },

    "builders": [{
        "type": "virtualbox-iso",
        "guest_os_type": "RedHat_64",
        "iso_url": "{{user `iso`}}",
        "iso_checksum": "{{user `checksum`}}",
        "iso_checksum_type": "{{user `checksum_type`}}",
        "output_directory": "centos7-x86_64-output",
        "vm_name": "packer-centos7-x86_64",
        "headless": "{{user `headless`}}",
        "disk_size": "{{user `disk_size`}}",
        "hard_drive_discard": "true",
        "hard_drive_nonrotational": "true",
        "hard_drive_interface": "{{user `hard_drive_interface`}}",
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
            ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
            ["modifyvm", "{{.Name}}", "--audio", "none"],
            ["modifyvm", "{{.Name}}", "--nic1", "nat", "--nictype1", "virtio"]
        ],
        "http_directory": "http",
        "ssh_username": "{{user `ssh_user`}}",
        "ssh_password": "{{user `ssh_pass`}}",
        "ssh_timeout": "20m",
        "ssh_pty": true,
        "shutdown_command": "sudo systemctl poweroff",
        "boot_wait": "5s",
        "boot_command": [
            "<esc>",
            "<wait>",
            "linux inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg biosdevname=0 net.ifnames=0",
            "<enter>"
        ]
    }],

    "provisioners": [
        {
            "type": "file",
            "source": "/home/cgaspar/.ssh/id_rsa.pub",
            "destination": "/root/id_rsa.pub"
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/update.sh",
                "scripts/sshd.sh",
                "scripts/cleanup.sh"
            ]
        }
    ]
}
