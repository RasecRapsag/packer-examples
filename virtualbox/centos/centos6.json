{
    "variables": {
        "iso": "http://ftp.unicamp.br/pub/centos/6/isos/x86_64/CentOS-6.10-x86_64-netinstall.iso",
        "checksum": "56f7b078a3b443095ba006cdc85319c691251cda98c5d73d12ef6db7aff6b4c1",
        "checksum_type": "sha256",
        "headless": "true",
        "cpus": "2",
        "memory": "1024",
        "disk_size": "20000",
        "hard_drive_interface": "sata",
        "hostname": "centos",
        "domain": "localhost",
        "ssh_user": "root",
        "ssh_pass": "123456"
    },

    "builders": [{
        "type": "virtualbox-iso",
        "guest_os_type": "RedHat_64",
        "iso_url": "{{user `iso`}}",
        "iso_checksum": "{{user `checksum`}}",
        "iso_checksum_type": "{{user `checksum_type`}}",
        "output_directory": "builds",
        "vm_name": "centos6-x86_64-packer",
        "headless": "{{user `headless`}}",
        "disk_size": "{{user `disk_size`}}",
        "hard_drive_discard": "true",
        "hard_drive_nonrotational": "true",
        "hard_drive_interface": "{{user `hard_drive_interface`}}",
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
            ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
            ["modifyvm", "{{.Name}}", "--audio", "none"],
            ["modifyvm", "{{.Name}}", "--nic1", "nat", "--nictype1", "virtio"]
        ],
        "http_directory": "http",
        "ssh_username": "{{user `ssh_user`}}",
        "ssh_password": "{{user `ssh_pass`}}",
        "ssh_timeout": "20m",
        "ssh_pty": true,
        "shutdown_command": "/sbin/halt -h -p",
        "boot_wait": "5s",
        "boot_command": [
            "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos6-ks.cfg<enter><wait>"
        ]
    }],

    "provisioners": [
        {
            "type": "file",
            "source": "/home/cgaspar/.ssh/id_rsa.pub",
            "destination": "/root/id_rsa.pub"
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/update.sh",
                "scripts/sshd.sh",
                "scripts/cleanup.sh"
            ]
        }
    ]
}
